<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<AnchorPane prefHeight="500.0" prefWidth="854.0" stylesheets="@css/style.css" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.eindopdracht.CollectionController">
   <children>
      <Label fx:id="welcomeLbl" layoutX="51.0" layoutY="25.0" prefHeight="47.0" prefWidth="586.0" text="Collection">
         <font>
            <Font name="Segoe UI Bold" size="27.0" />
         </font>
      </Label>
      <TableView fx:id="collectionTbl" items="${controller.itemsObservableArray}" layoutX="51.0" layoutY="129.0" prefHeight="314.0" prefWidth="740.0">
        <columns>
          <TableColumn fx:id="itemCodeCol" prefWidth="75.0" text="Item code" />
          <TableColumn fx:id="availableCol" prefWidth="75.0" text="Available" />
            <TableColumn fx:id="titleCol" prefWidth="310.0" text="Title" />
            <TableColumn fx:id="authorCol" minWidth="0.0" prefWidth="190.0" text="Author" />
            <TableColumn fx:id="deleteCol" prefWidth="30.0" />
            <TableColumn fx:id="editCol" prefWidth="30.0" />
        </columns>
      </TableView>
      <Button fx:id="addBtn" layoutX="757.0" layoutY="85.0" mnemonicParsing="false" styleClass="iconBtn">
         <graphic>
            <FontIcon iconLiteral="fa-plus">
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </FontIcon>
         </graphic>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </Button>
      <TextField fx:id="searchInput" layoutX="81.0" layoutY="84.0" prefHeight="25.0" prefWidth="310.0" promptText="Search..." />
      <FontIcon iconLiteral="fa-search" layoutX="59.0" layoutY="101.0" />
   </children>
</AnchorPane>
